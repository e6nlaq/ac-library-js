{
  "compilerOptions": {
    // Enable latest features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "CommonJS",
    "allowJs": true,

    "types": ["vitest/globals"],
    "paths": { "@/*": ["./lib/*"] },

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,

    "declaration": true,

    "outDir": "./dist/"
  },

  "include": ["./lib/**/*.ts", "./test/**/*"]
}
